# Директорії бази даних та зберігання
DB_PATH=data/loader.db
IMG_DIR=img
LINKS_DIR=links
LOGS_DIR=logs

# Налаштування завантаження
# Максимальна кількість одночасних завантажень глобально
GLOBAL_LIMIT=10

# Максимальна кількість одночасних завантажень на хост (захист від флуду)
PER_HOST_LIMIT=3

# Максимальна кількість спроб повтору для невдалих завантажень
MAX_RETRIES=5

# Таймаут завантаження в секундах
DOWNLOAD_TIMEOUT=300

# Конфігурація логування
# Рівень логування: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Максимальний розмір файлу логів у байтах (10 МБ за замовчуванням)
LOG_MAX_BYTES=10485760

# Кількість резервних файлів логів для збереження
LOG_BACKUP_COUNT=10

# Налаштування форуму (з вимог add.md)
# Домен форуму (наприклад, https://example.com)
FORUM_DOMAIN=https://your-forum-domain.com

# Стартовий URL для скрапінгу (наприклад, /viewtopic.php?f=9&t=10160660)
START_URL=/viewtopic.php?f=9&t=10160660

# Назва параметра сторінки для пагінації: "start", "page", або "p"
# Приклади:
#   - "start" для URL типу ?start=15, ?start=30, тощо
#   - "page" для URL типу ?page=2, ?page=3, тощо
#   - "p" для URL типу ?p=2, ?p=3, тощо
PAGE_PARAM=start

# Налаштування Chrome/Браузера
# Шлях до директорії профілю користувача Chrome (опціонально)
# Використання профілю дозволяє:
#   - Повторно використовувати існуючі сесії (залишатися авторизованим)
#   - Використовувати встановлені розширення (блокувальники реклами тощо)
# У Windows стандартний профіль Chrome зазвичай знаходиться за адресою:
#   C:\Users\<ВашеІм'я>\AppData\Local\Google\Chrome\User Data
# ВАЖЛИВО: Chrome НЕ повинен бути запущений при використанні стандартного профілю
# Порада: Створіть копію вашого профілю для скрапера, щоб уникнути конфліктів
CHROME_PROFILE_PATH=

# Запуск Chrome у headless режимі (без видимого вікна)
# Опції: true, false
# Встановіть false, якщо хочете бачити, що робить браузер
CHROME_HEADLESS=false

# Шлях до бінарного файлу Chrome (опціонально, автовизначається, якщо не встановлено)
# Потрібно тільки якщо Chrome встановлено в нестандартному місці
# Приклад: C:\Program Files\Google\Chrome\Application\chrome.exe
CHROME_BINARY_PATH=
